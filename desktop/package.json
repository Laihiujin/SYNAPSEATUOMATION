{
  "name": "synapseautomation-desktop",
  "private": true,
  "version": "0.1.0",
  "description": "Electron shell to start/stop SynapseAutomation backend + worker",
  "author": "SynapseAutomation Team",
  "main": "src/main.js",
  "scripts": {
    "dev": "electron .",
    "prepare:resources": "node scripts/prepare_resources.js",
    "build:electron": "npm run prepare:resources && electron-builder --dir",
    "build:installer": "npm run build:electron && iscc installer.iss",
    "build": "npm run build:installer"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "unzipper": "^0.12.3"
  },
  "build": {
    "appId": "com.synapseautomation.desktop",
    "productName": "SynapseAutomation",
    "files": [
      "src/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "synapse-resources",
        "filter": ["**/*", "!**/browsers-zip/**"]
      },
      {
        "from": "resources/browsers-zip",
        "to": "synapse-resources/browsers-zip",
        "filter": ["**/*.zip"]
      },
      {
        "from": "../syn_backend",
        "to": "synapse-resources/syn_backend",
        "filter": [
          "**/*",
          "!**/__pycache__/**",
          "!**/*.pyc",
          "!**/*.pyo",
          "!**/.pytest_cache/**",
          "!**/node_modules/**",
          "!**/.git/**",
          "!**/logs/**",
          "!**/temp/**",
          "!**/cache/**",
          "!**/browser_profiles/**",
          "!**/cookies/**",
          "!**/sessions/**"
        ]
      },
      {
        "from": "../syn_frontend_react",
        "to": "synapse-resources/syn_frontend_react",
        "filter": [
          "**/*",
          "!**/node_modules/**",
          "!**/.git/**",
          "!**/.next/cache/**",
          "!**/coverage/**"
        ]
      }
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "dir"
    }
  }
}
